  <div class="custom topBotomBordersOut btn-black-out">
    <%= link_to new_bathroom_path do %>
      <p>New Bathroom</p>
    <% end %>
  </div>

  <div class="my-bookings">
    <h2>My Bookings</h2>
    <% @user.bookings.each do |booking| %>
      <%= link_to booking_path(booking.id) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">
            <div class="card-category">My booking</div>
            <div class="card-description">
              <p><%= booking.start_time %></p>
              <p><%= booking.end_time %></p>
              <p><%= booking.bathroom.name %></p>
              <p><%= booking.bathroom.address %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <br>

  <div class="my-bathrooms">
    <h2>My Bathrooms</h2>
    <% @user.bathrooms.each do |bathroom| %>
      <%= link_to bathroom_path(bathroom) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">
            <div class="card-category">My bathroom</div>
            <div class="card-description">
              <p><%= bathroom.name %></p>
              <p><%= bathroom.address %></p>
              <p><%= bathroom.size %> squre meters</p>
              <p><%= bathroom.shower_condition %></p>
              <p>$<%= bathroom.price_per_use %></p>
              <p><%= bathroom.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
